<p style="color: green"><%= notice %></p>



<div id="friends">
<table class="table table-striped table-hover table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>First</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Twitter</th>
        <th>Solana</th>
        <th>Etherium</th>
        <th>Links</th>
      </tr>
    </thead>
    <tbody>
  <% @friends.each do |friend| %>
    
    <div id="<%= dom_id friend %>"> 
    <tr>
      <td><%= friend.first_name %> </td>
      <td><%= friend.last_name %> </td>
      <td><%= friend.phone %> </td>
      <td><%= friend.email %> </td>
      <td><%= friend.twitter %> </td>
      <td><%= friend.solana_wallet %> </td>
      <td><%= friend.etherium_wallet %> </td>
      <td> <%= link_to "Show this friend", friend %> </td>
      
      
      
      
      
      
      <td></td>
      
    </tr>


   
  <% end %>
  </tbody>
  </table>
  <%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

</div>
